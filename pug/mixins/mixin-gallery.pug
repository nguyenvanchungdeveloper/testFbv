mixin gallery-item(image, tt)
    .block
        +a('gallery-detail.html', 'absolute')
        .thumb-res.wide
            +img("gallery/"+image)(class="fit-cover")
            .overlay-thumb
        .info.text-center
            .tt.fw-medium=tt


