block mixins
    include ../mixins/mixins
block vars
    - title = ''
    - menu_active = ''
    - wrapper_class = ''
    - wrapper_id = ''
    - home_slider = true
    - banner_top = false
    - banner_image = ''
    - login = false
    
    - bg_footer = 'https://www.bouygues-es.co.uk/sites/uk/files/2017-10/asset-management-buildings-web_0.jpg'

doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title=title
        link(rel="shortcut icon" href="favicon.png")
        link(href="css/library.min.css" rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    body
        .preloader
            .preloader-in: img(src="css/skin/logo.png" alt="Loading...")
        .wrapper(class=wrapper_class id=wrapper_id)
            block header
                include ../layout/header
            block layers
                if banner_top
                    include ../layout/banner-all
                if home_slider
                    include ../layout/home-slider
            block mainer
                //- content here
            block footer
                include ../layout/footer
        button#backtop.far.fa-chevron-up(role="button")
        block scripts 
            include ../layout/scripts

        #fb-root
        script(async, defer, crossorigin="anonymous", src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v12.0&appId=1769235226437326&autoLogAppEvents=1", nonce="qTkYIPYq")
