extends template/template
block vars
    - title = 'Dự Án FBV'
    - menu_active = 'projects'
    - wrapper_class = ''
    - wrapper_id = ''
    - home_slider = false
    - banner_top = true
    - banner_image = 'banner-projects.jpg'
    - login = false
    - bg_footer = 'https://cdn.pixabay.com/photo/2016/11/29/06/22/buildings-1867772_960_720.jpg'
append breadcrumb 
    +breadcrumb({'projects.html': 'Dự án'}, title)
block mainer
