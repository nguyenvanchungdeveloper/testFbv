                        li: +a('', 'dropdown-item', 'Đã thi công')
                        li: +a('', 'dropdown-item', 'Đang thi công')
                .nav-filter-item.dropdown
                    a.btn.form-control.dropdown-toggle#dropdownMenuLink(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false") Theo thời gian
                    ul.dropdown-menu(aria-labelledby="dropdownMenuLink")
                        li: +a('', 'dropdown-item', '2020')
                        li: +a('', 'dropdown-item', '2019')
                        li: +a('', 'dropdown-item', '2018')
                        li: +a('', 'dropdown-item', '2017')
                        li: +a('', 'dropdown-item', '2016')
                        li: +a('', 'dropdown-item', '2015')
